<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bookshelf.ConfirmaEmail"    
              xmlns:local="clr-namespace:Bookshelf.Resources"
                  Title="Recuperar senha"              
                Style="{StaticResource ContentPage}">
    <ContentPage.Content>
        <StackLayout  VerticalOptions="Center"  >
            <Frame Style="{ StaticResource FramePrincipal }">
                <StackLayout Style="{StaticResource StackLayoutPrincipal}">
                    <Label Text="{x:Static local:Icons.RecoverPass}" TextColor="Black" HorizontalOptions="Center" FontFamily="FontAwesomeBold" FontSize="30"></Label>
                    <Entry Placeholder="Digite o email do seu usuário"  WidthRequest="250"
                HorizontalOptions="CenterAndExpand" x:Name="EntEmail" MaxLength="400" Style="{StaticResource Entry}" />
                    <Button Text="Confirmar" x:Name="BtnConfirmar" Style="{StaticResource BtnPrincipal}"
                           Clicked="BtnConfirmar_Clicked"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>